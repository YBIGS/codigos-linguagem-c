#include <iostream>
using namespace std;

int main() {
    long long a, b;

    setlocale(LC_ALL, "Portuguese");

    cout << "\n" << "Subtração de números inteiros:" << "\n" << "\n";
    cout << "Determine os valores envolvidos no cálculo matemático." << "\n";
    cout << "Os valores devem ser maiores que -9223372036854775807 e menores que 9223372036854775807" << "\n";

    cout << "Determine primeiro valor: ";
    cin >> a;

    cout << "Determine segundo valor: ";
    cin >> b;

    cout << "\n";

    cout << "Resultado: "<< a - b << "\n" <<endl;
}
