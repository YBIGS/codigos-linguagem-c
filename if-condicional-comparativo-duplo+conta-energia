#include <iostream>
using namespace std;

int main() {
    int a;

    setlocale(LC_ALL, "Portuguese");

    cout << "\n" << "Informe consumo:";
    cin >> a;

    if (a <= 10){
    cout << "Valor:" << 7 << endl;
    }
    if (a >= 11 && a <= 30){
    cout << "Valor:" << (((a - 10) * 1) +7) << endl;
    }
    if (a >= 31 && a <= 100){
    cout << "Valor:" << (((a - 30) * 2) + 27 ) << endl;
    }
    if (a >= 101){
    cout << "Valor:" << (((a - 100) * 5) + 167) << endl;
    }
    return 0;
}
